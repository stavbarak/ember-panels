<h3 class="main-title">Manage Account ID: {{model.id}}</h3>
<form {{action "saveChanges" model on="submit"}}>

    <div class="category">
        <label class="category-label" for="id">reseller:</label>
        {{input type="text" id="reseller" name=model.reseller value=model.reseller pattern="[a-zA-Z]+"}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Status:</label>
        {{input type="text" id="status" name=model.status value=model.status pattern="[a-zA-Z]+"}}
    </div>
    <div class="category">
        <label class="category-label" for="mail">E-mail:</label>
        {{input type="email" id="email" name=model.email value=model.email pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Invalid email address"}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Address:</label>
        {{input type="text" id="address" name=model.address value=model.address}}
    </div>
    <div class="category">
        <label class="category-label" for="id">City:</label>
        {{input type="text" id="city" name=model.city value=model.city pattern="[a-zA-Z]+"}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Zip:</label>
        {{input type="text" id="zip" name=model.zip value=model.zip}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Country:</label>
        {{input type="text" id="country" name=model.country value=model.country pattern="[a-zA-Z]+"}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Region:</label>
        {{input type="text" id="region" name=model.region value=model.region pattern="[a-zA-Z]+"}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Telephone:</label>
        {{input type="text" id="telephone" name=model.telephone value=model.telephone}}
    </div>
    <div class="category"> 
        <label class="category-label" for="id">Fax Number:</label>
        {{input type="text" id="faxNumber" name=model.faxNumber value=model.faxNumber}}
    </div>
    <div class="category">
        <label class="category-label" for="id">Creation Date:</label>
        {{input type="text" id="creationDate" name=model.creationDate value=model.creationDate disabled=true}}
    </div>

    <button>Save</button>
</form>

{{outlet}}
